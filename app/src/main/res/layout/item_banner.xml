<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="movie"
            type="com.example.saveomovies.model.movie.Result" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/banner_item_width"
        android:layout_height="@dimen/banner_item_height"
        app:cardCornerRadius="@dimen/banner_item_radius">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:imageUrl="@{movie.backdrop_path}"
            tools:src="@drawable/blue_background"/>

    </androidx.cardview.widget.CardView>


</layout>
